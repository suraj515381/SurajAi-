  <script>
    const synth = window.speechSynthesis;
    let userLang = navigator.language || 'hi-IN';

    function setLanguage(lang) {
      if (lang === 'auto') {
        userLang = navigator.language || 'hi-IN';
      } else {
        userLang = lang;
      }
      speak("рднрд╛рд╖рд╛ рдмрджрд▓ рджреА рдЧрдИ рд╣реИред Language updated.");
    }

    function speak(text) {
      const utter = new SpeechSynthesisUtterance(text);
      utter.lang = userLang;
      synth.speak(utter);
    }

    function startListening() {
      const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
      recognition.lang = userLang;
      recognition.start();

      recognition.onresult = function(event) {
        const result = event.results[0][0].transcript;
        speak("рдЖрдкрдиреЗ рдХрд╣рд╛: " + result);
        callChatGPT(result);
      };

      recognition.onerror = function(event) {
        speak("рдорд╛рдл рдХреАрдЬрд┐рдП, рдореИрдВ рд╕реБрди рдирд╣реАрдВ рдкрд╛рдпрд╛");
      }
    }

    function callChatGPT(prompt) {
      fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer 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"
        },
        body: JSON.stringify({
          model: "gpt-3.5-turbo",
          messages: [
            { role: "user", content: prompt }
          ]
        })
      })
      .then(res => res.json())
      .then(data => {
        const reply = data.choices[0].message.content;
        speak(reply);
      })
      .catch(err => {
        console.error(err);
        speak("рдЙрддреНрддрд░ рдкреНрд░рд╛рдкреНрдд рдХрд░рдиреЗ рдореЗрдВ рддреНрд░реБрдЯрд┐ рд╣реБрдИред");
      });
    }

    function searchQuery() {
      const query = prompt("рдХреНрдпрд╛ рд╕рд░реНрдЪ рдХрд░рдирд╛ рд╣реИ?");
      if (query) {
        window.open("https://www.google.com/search?q=" + encodeURIComponent(query), "_blank");
      }
    }
  </script>
